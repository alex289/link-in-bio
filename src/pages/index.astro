---
import { Image } from 'astro:assets';
import localImage from '../../public/images/konietzko_alexander.webp';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Alexander Konietzko - Links</title>
    <link rel="shortcut icon" href="/favicon.ico" />
    <meta
      name="viewport"
      content="minimum-scale=1, initial-scale=1, width=device-width, shrink-to-fit=no, viewport-fit=cover"
    />
    <meta
      name="apple-mobile-web-app-status-bar-style"
      content="black-translucent"
    />
    <meta name="theme-color" content="#4e54c8" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="description" content="My personal links" />
    <link
      rel="icon"
      type="image/png"
      href="/icon/favicon-32x32.png"
      sizes="32x32"
    />
    <link
      rel="icon"
      type="image/png"
      href="/icon/favicon-16x16.png"
      sizes="16x16"
    />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/icon/apple-touch-icon.png"
    />
  </head>
  <body>
    <div class="jumbo jumbo-container"></div>
    <main class="context">
      <header>
        <Image src={localImage} alt="Profile picture" />
        <h1>@alex289</h1>
      </header>
      <ul class="links-list">
        <li class="grow">
          <a
            href="https://alexanderkonietzko.vercel.app"
            target="_blank"
            rel="noopener norefferer">
            <Image
              src="/images/homepage.svg"
              alt="Homepage"
              loading="eager"
              width="20"
              height="20"
            />
             My Portfolio Website
          </a>
        </li>
        <li class="grow">
          <a
            href="https://what-do-we-eat.vercel.app"
            target="_blank"
            rel="noopener norefferer">
            <Image
              src="/images/food.webp"
              alt="What-do-we-eat"
              width="20"
              height="20"
            />
             What-do-we-eat
          </a>
        </li>
        <li class="grow">
          <a
            href="https://github.com/alex289"
            target="_blank"
            rel="noopener norefferer">
            <Image
              src="/images/github.svg"
              alt="GitHub"
              width="20"
              height="20"
            />
             GitHub
          </a>
        </li>
        <li class="grow">
          <a
            href="https://twitter.com/_alex289"
            target="_blank"
            rel="noopener norefferer">
            <Image src="/images/twitter.svg" alt="X" width="20" height="20" />
             Twitter/X
          </a>
        </li>
      </ul>
    </main>
    <script
      async
      src="https://analytics.alexanderkonietzko.com/script.js"
      data-website-id="b9ba575f-7bdb-4b09-a14b-4bb36cdcb235"></script>
  </body>

  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@500&display=swap');

    body,
    html {
      margin: 0;
      padding: 0;
      font-family: 'Inter', sans-serif;
    }

    header {
      margin-top: 3em;
      text-align: center;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    header > img {
      width: 8em;
      height: 8em;
    }

    header > h1 {
      display: inline-block;
      font-size: 0.9em;
      font-weight: bold;
      border-radius: 1em;
      background-color: #000a;
      color: #fff;
      padding: 0.3em 0.6em;
      border: 1px solid #fffa;
      backdrop-filter: blur(10px) saturate(160%) contrast(180%);
      -webkit-backdrop-filter: blur(10px) saturate(160%) contrast(180%);
    }

    .links-list {
      box-sizing: border-box;
      list-style: none;
      margin: 0 auto;
      padding: 2em;
      max-width: 480px;
    }

    .links-list > li {
      background-color: #fffa;
      backdrop-filter: blur(10px) saturate(160%) contrast(180%);
      -webkit-backdrop-filter: blur(10px) saturate(160%) contrast(180%);
      border-radius: 10em;
      margin: 1.4em 0;
      box-shadow: rgb(28 32 93 / 24%) 0px 2px 8px 0px;
    }

    .links-list > li > a {
      display: flex;
      flex-direction: row;
      justify-content: center;
      align-items: center;
      gap: 0.5em;
      padding: 1em;
    }

    a {
      color: black;
      text-decoration: none;
    }

    @keyframes jumbo {
      from {
        background-position:
          50% 50%,
          50% 50%;
      }
      to {
        background-position:
          350% 50%,
          350% 50%;
      }
    }

    .jumbo-container {
      position: absolute;
      opacity: 0.3;
      inset: -10px;
      z-index: -1;
    }

    .jumbo {
      --stripes: repeating-linear-gradient(
        100deg,
        #fff 0%,
        #fff 7%,
        transparent 10%,
        transparent 12%,
        #fff 16%
      );
      --stripesDark: repeating-linear-gradient(
        100deg,
        #000 0%,
        #000 7%,
        transparent 10%,
        transparent 12%,
        #000 16%
      );
      --rainbow: repeating-linear-gradient(
        100deg,
        #60a5fa 10%,
        #e879f9 15%,
        #60a5fa 20%,
        #5eead4 25%,
        #60a5fa 30%
      );
      background-image: var(--stripes), var(--rainbow);
      background-size: 300%, 200%;
      background-position:
        50% 50%,
        50% 50%;

      filter: blur(10px) invert(100%);

      mask-image: radial-gradient(
        ellipse at 100% 0%,
        black 40%,
        transparent 70%
      );

      pointer-events: none;
    }

    .jumbo::after {
      content: '';
      position: absolute;
      inset: 0;
      background-image: var(--stripes), var(--rainbow);
      background-size: 200%, 100%;
      animation: jumbo 60s linear infinite;
      background-attachment: fixed;
      mix-blend-mode: difference;
    }

    @media (prefers-color-scheme: dark) {
      html {
        background-color: #000;
        color: #fff;
      }

      .jumbo {
        background-image: var(--stripesDark), var(--rainbow);
        filter: blur(10px) opacity(50%) saturate(200%);
      }

      .jumbo::after {
        background-image: var(--stripesDark), var(--rainbow);
      }
    }

    @media (hover: hover) and (pointer: fine) {
      .grow {
        transition: all 0.1s ease-in-out;
      }
      .grow:hover {
        transform: scale(1.05);
      }
    }
  </style>
</html>
