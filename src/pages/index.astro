---
import { Image } from 'astro:assets';
import localImage from '../../public/images/konietzko_alexander.webp';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Alexander Konietzko - Links</title>
    <link rel="shortcut icon" href="/favicon.ico" />
    <meta
      name="viewport"
      content="minimum-scale=1, initial-scale=1, width=device-width, shrink-to-fit=no, viewport-fit=cover"
    />
    <meta
      name="apple-mobile-web-app-status-bar-style"
      content="black-translucent"
    />
    <meta name="theme-color" content="#4e54c8" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="description" content="My personal links" />
    <link
      rel="icon"
      type="image/png"
      href="/icon/favicon-32x32.png"
      sizes="32x32"
    />
    <link
      rel="icon"
      type="image/png"
      href="/icon/favicon-16x16.png"
      sizes="16x16"
    />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/icon/apple-touch-icon.png"
    />
  </head>
  <body>
    <main class="context">
      <header>
        <Image src={localImage} alt="Profile picture" />
        <h1>@alex289</h1>
      </header>
      <ul class="links-list">
        <li class="grow">
          <a
            href="https://alexanderkonietzko.vercel.app"
            target="_blank"
            rel="noopener norefferer">
            <Image
              src="./images/homepage.svg"
              alt="Homepage"
              width="20"
              height="20"
            />
             My Personal Site
          </a>
        </li>
        <li class="grow">
          <a
            href="https://what-do-we-eat.vercel.app"
            target="_blank"
            rel="noopener norefferer">
            <Image
              src="./images/food.webp"
              alt="What-do-we-eat"
              width="20"
              height="20"
            />
             What-do-we-eat
          </a>
        </li>
        <li class="grow">
          <a
            href="https://github.com/alex289"
            target="_blank"
            rel="noopener norefferer">
            <Image
              src="./images/github.svg"
              alt="GitHub"
              width="20"
              height="20"
            />
             GitHub
          </a>
        </li>
        <li class="grow">
          <a
            href="https://twitter.com/_alex289"
            target="_blank"
            rel="noopener norefferer">
            <Image
              src="./images/twitter.svg"
              alt="Twitter"
              width="20"
              height="20"
            />
             Twitter
          </a>
        </li>
      </ul>
    </main>
    <div class="area">
      <ul class="circles">
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
      </ul>
    </div>
    <script
      async
      src="https://analytics.alexanderkonietzko.com/script.js"
      data-website-id="b9ba575f-7bdb-4b09-a14b-4bb36cdcb235"></script>
  </body>
</html>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@500&display=swap');

  body,
  html {
    margin: 0;
    padding: 0;
    font-family: 'Inter', sans-serif;
    color: #fff;
    background: #4e54c8;
  }

  header {
    margin-top: 3em;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  header > img {
    width: 8em;
    height: 8em;
  }

  header > h1 {
    display: inline-block;
    font-size: 0.9em;
    font-weight: bold;
    border-radius: 1em;
    background-color: #000a;
    color: #fff;
    padding: 0.3em 0.6em;
    border: 1px solid #fffa;
    backdrop-filter: blur(10px) saturate(160%) contrast(180%);
    -webkit-backdrop-filter: blur(10px) saturate(160%) contrast(180%);
  }

  .links-list {
    box-sizing: border-box;
    list-style: none;
    margin: 0 auto;
    padding: 2em;
    max-width: 480px;
  }

  .links-list > li {
    background-color: #fffa;
    backdrop-filter: blur(10px) saturate(160%) contrast(180%);
    -webkit-backdrop-filter: blur(10px) saturate(160%) contrast(180%);
    border-radius: 10em;
    margin: 1.4em 0;
    box-shadow: rgb(28 32 93 / 24%) 0px 2px 8px 0px;
  }

  .links-list > li > a {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    gap: 0.5em;
    padding: 1em;
  }

  a {
    color: black;
    text-decoration: none;
  }

  .context {
    width: 100%;
    height: 100vh;
    position: absolute;
    z-index: 100;
  }

  .area {
    background: #4e54c8;
    background: -webkit-linear-gradient(to left, #8f94fb, #4e54c8);
    width: 100%;
    height: 100vh;
    overflow: hidden;
  }

  .circles {
    position: relative;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    overflow: hidden;
  }

  .circles li {
    position: absolute;
    display: block;
    list-style: none;
    width: 20px;
    height: 20px;
    background: rgba(255, 255, 255, 0.2);
    animation: animate 25s linear infinite;
    bottom: -150px;
  }

  .circles li:nth-child(1) {
    left: 25%;
    width: 80px;
    height: 80px;
    animation-delay: 0s;
  }

  .circles li:nth-child(2) {
    left: 10%;
    width: 20px;
    height: 20px;
    animation-delay: 2s;
    animation-duration: 12s;
  }

  .circles li:nth-child(3) {
    left: 70%;
    width: 20px;
    height: 20px;
    animation-delay: 4s;
  }

  .circles li:nth-child(4) {
    left: 40%;
    width: 60px;
    height: 60px;
    animation-delay: 0s;
    animation-duration: 18s;
  }

  .circles li:nth-child(5) {
    left: 65%;
    width: 20px;
    height: 20px;
    animation-delay: 0s;
  }

  .circles li:nth-child(6) {
    left: 75%;
    width: 110px;
    height: 110px;
    animation-delay: 3s;
  }

  .circles li:nth-child(7) {
    left: 35%;
    width: 150px;
    height: 150px;
    animation-delay: 7s;
  }

  .circles li:nth-child(8) {
    left: 50%;
    width: 25px;
    height: 25px;
    animation-delay: 15s;
    animation-duration: 45s;
  }

  .circles li:nth-child(9) {
    left: 20%;
    width: 15px;
    height: 15px;
    animation-delay: 2s;
    animation-duration: 35s;
  }

  .circles li:nth-child(10) {
    left: 85%;
    width: 150px;
    height: 150px;
    animation-delay: 0s;
    animation-duration: 11s;
  }

  @keyframes animate {
    0% {
      transform: translateY(0) rotate(0deg);
      opacity: 1;
      border-radius: 0;
    }

    100% {
      transform: translateY(-1000px) rotate(720deg);
      opacity: 0;
      border-radius: 50%;
    }
  }

  @media (hover: hover) and (pointer: fine) {
    .grow {
      transition: all 0.1s ease-in-out;
    }
    .grow:hover {
      transform: scale(1.05);
    }
  }
</style>
